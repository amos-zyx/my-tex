%# some useful math macro commands

% ======== math operators
% argmin, argmax
\newcommand{\argmin}{\mathop{\arg\min}}
\newcommand{\argmax}{\mathop{\arg\max}}

% dx
\newcommand{\diff}{\mathop{\,\mathrm{d}}}


% ======== bracket
\newcommand{\abs}[1]{\mathop{\left| #1 \right|}}
\newcommand{\norm}[1]{\mathop{\left\| #1 \right\|}}

% set
\newcommand{\set}[2]{\mathop{\{ #1 \;|\; #2 \}}}
% \newcommand{\set}[2]{\mathop{\{ #1 : #2 \}}}

% inner product
\newcommand{\inprod}[2]{\mathop{\left\langle #1, #2 \right\rangle}}
% \newcommand{\inprod}[2]{\mathop{#1 ^T #2}}


% ======== letter
% == warning: please ensure \mathbb{}, \mathscr{}, \mathcal{} has been defined 
% set letter
\newcommand{\setl}[1]{\mathop{\mathbb{#1}}}

% set family letter
% \RequirePackage{eucal} % redefine \mathscr{}
\newcommand{\setfaml}[1]{\mathop{\mathscr{#1}}}

% mapl letter
% \RequirePackage{mathrsfs} % redefine \mathcal{}
\newcommand{\mapl}[1]{\mathop{\mathcal{#1}}}


% ======== abbreviation words in math
\newcommand{\abbreviation}[2]{\mathop{\mathbf{#1}\left( #2 \right)}}
% \newcommand{\abbreviation}[2]{\mathop{\mathbf{#1}\, #2 }}

\newcommand{\dom}[1]{\abbreviation{dom}{#1}}
\renewcommand{\div}[1]{\abbreviation{div}{#1}}
\newcommand{\aff}[1]{\abbreviation{aff}{#1}}
\newcommand{\epi}[1]{\abbreviation{epi}{#1}}
